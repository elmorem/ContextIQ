# ==================== Database Configuration ====================
DATABASE_URL=postgresql+asyncpg://contextiq:contextiq_dev_password@localhost:5432/contextiq
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ==================== Redis Configuration ====================
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# ==================== Qdrant Configuration ====================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=  # Optional for local dev

# ==================== RabbitMQ Configuration ====================
RABBITMQ_URL=amqp://contextiq:contextiq_dev_password@localhost:5672/
RABBITMQ_EXCHANGE_NAME=contextiq
RABBITMQ_QUEUE_EXTRACTION=memory_extraction
RABBITMQ_QUEUE_CONSOLIDATION=memory_consolidation
RABBITMQ_QUEUE_EMBEDDING=embedding_generation

# ==================== LLM Provider API Keys ====================
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GOOGLE_API_KEY=  # Optional

# ==================== LLM Configuration ====================
DEFAULT_EXTRACTION_MODEL=gpt-4o-mini
DEFAULT_EMBEDDING_MODEL=text-embedding-3-large
DEFAULT_CONSOLIDATION_MODEL=gpt-4o
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4000
LLM_REQUEST_TIMEOUT=60

# ==================== Memory Bank Configuration ====================
DEFAULT_TTL_DAYS=365
ENABLE_REVISIONS=true
MAX_SCOPE_KEYS=5
MEMORY_FACT_MAX_LENGTH=2000

# ==================== Service Configuration ====================
LOG_LEVEL=INFO
ENVIRONMENT=development  # development, staging, production

# ==================== API Gateway Configuration ====================
SESSIONS_SERVICE_URL=http://localhost:8001
MEMORY_SERVICE_URL=http://localhost:8002
PROCEDURAL_SERVICE_URL=http://localhost:8003

# ==================== Security Configuration ====================
SECRET_KEY=your-secret-key-change-this-in-production
API_KEY_ENABLED=false  # Enable for production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# ==================== Rate Limiting ====================
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_BURST=2000

# ==================== Observability ====================
ENABLE_METRICS=true
ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# ==================== Worker Configuration ====================
WORKER_CONCURRENCY=5
WORKER_PREFETCH_COUNT=10
ASYNC_MEMORY_GENERATION=true
